{
  "name": "botwrando",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://botwrando.github.io/botwrando",
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.9.1",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.0",
    "@types/shuffle-seed": "^1.1.0",
    "gh-pages": "^2.2.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-keyboard-event-handler": "^1.5.4",
    "react-scripts": "3.4.1",
    "react-scrollable-feed": "^1.1.2",
    "shuffle-seed": "^1.1.6",
    "typescript": "~3.8.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.1",
    "@testing-library/user-event": "^10.0.1",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.4",
    "coveralls": "^3.0.11",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "jest-enzyme": "^7.1.2",
    "jest-spec-reporter": "^1.0.12",
    "stylelint": "^13.5.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-scss": "^3.17.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "ci": "CI=true yarn test --reporters=jest-spec-reporter",
    "coverage": "yarn ci --coverage=true --coverageProvider=v8 && coveralls < ./coverage/lcov.info",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext=ts,tsx src",
    "lintfix": "node ./node_modules/eslint/bin/eslint.js --ext=ts,tsx src --fix",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-var": 1,
      "no-eval": "error",
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": "warn",
      "no-plusplus": "off",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "prefer-arrow-callback": [
        0,
        {
          "allowNamedFunctions": true
        }
      ],
      "prefer-destructuring": "warn",
      "func-names": [
        "error",
        "never"
      ],
      "no-use-before-define": [
        "off",
        {
          "functions": false,
          "classes": true
        }
      ],
      "max-nested-callbacks": [
        "error",
        5
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "declaration-property-value-blacklist": null,
      "max-nesting-depth": 5,
      "selector-max-compound-selectors": 5,
      "selector-max-id": 1,
      "selector-no-qualifying-type": null,
      "scss/at-rule-no-unknown": true,
      "scss/selector-no-redundant-nesting-selector": null
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
