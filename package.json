{
  "name": "botwrando",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://botwrando.github.io/botwrando",
  "dependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/shuffle-seed": "^1.1.0",
    "gh-pages": "^2.2.0",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-keyboard-event-handler": "^1.5.4",
    "react-scripts": "3.4.0",
    "react-scrollable-feed": "^1.1.2",
    "shuffle-seed": "^1.1.6",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^24.0.0",
    "coveralls": "^3.0.11",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "jest-enzyme": "^7.1.2",
    "jest-spec-reporter": "^1.0.12"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "ci": "CI=true yarn test --reporters=jest-spec-reporter",
    "coverage": "yarn ci --coverage=true --coverageProvider=v8 && coveralls < ./coverage/lcov.info",
    "lint": "./node_modules/eslint/bin/eslint.js --ext=ts,tsx src",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-var": 1,
      "no-eval": "error",
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "no-console": "warn",
      "no-plusplus": "off",
      "space-before-function-paren": ["error", "always"],
      "padded-blocks": ["error", "never"],
      "prefer-arrow-callback": [0, { "allowNamedFunctions": true }],
      "prefer-destructuring": "warn",
      "func-names": ["error", "never"],
      "no-use-before-define": [
        "off", {
          "functions": false,
          "classes": true
        }
      ],
      "max-nested-callbacks": [
        "error",
        5
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "react/jsx-filename-extension": [1, {
        "extensions": [".jsx", ".tsx"]
      }],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
